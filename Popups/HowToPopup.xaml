<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup
    x:Class="LabelCreator.Popups.HowToPopup"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="clr-namespace:CommunityToolkit.Maui.Views;assembly=CommunityToolkit.Maui"
    Color="{AppThemeBinding Light={StaticResource White},
                            Dark={StaticResource Gray600}}">
    <VerticalStackLayout Padding="30">
        <Label HorizontalOptions="Center" VerticalOptions="Center">
            <Label.FormattedText>
                <FormattedString>
                    <Span FontAttributes="Bold" Text="Where is the Word Document saved? " />
                    <Span Text="Open your file explorer on your phone and navigate to the following location." />
                </FormattedString>
            </Label.FormattedText>
        </Label>
    </VerticalStackLayout>
</toolkit:Popup>

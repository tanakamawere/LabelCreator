<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="LabelCreator.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    xmlns:vm="clr-namespace:LabelCreator"
    x:DataType="vm:MainPageViewModel">

    <ScrollView Orientation="Vertical">
        <VerticalStackLayout
            Margin="10"
            HorizontalOptions="Center"
            Spacing="5">
            <!--  Label Formatting  -->
            <toolkit:Expander IsExpanded="True">
                <toolkit:Expander.Header>
                    <Label Margin="5" VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span
                                    FontAttributes="Bold"
                                    FontSize="Large"
                                    Text="Customise label appearance" />
                                <Span FontSize="Micro" Text=" (Tap to close)" />
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </toolkit:Expander.Header>

                <VerticalStackLayout>
                    <Border Padding="20">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="20" />
                        </Border.StrokeShape>
                        <VerticalStackLayout>
                            <!--  Font Size  -->
                            <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                                <Label VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="Font Size: " />
                                        </FormattedString>
                                    </Label.FormattedText>
                                </Label>
                                <Entry
                                    Keyboard="Numeric"
                                    Text="{Binding FontSize}"
                                    VerticalOptions="Center" />
                                <Stepper
                                    Maximum="40"
                                    Minimum="12"
                                    VerticalOptions="Center"
                                    Value="{Binding FontSize}" />
                            </HorizontalStackLayout>
                            <!--  Font Bold  -->
                            <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                                <Label Text="Bold Text" VerticalOptions="Center" />
                                <Switch IsToggled="{Binding IsBold}" />
                            </HorizontalStackLayout>
                            <!--  Font  -->
                            <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                                <Label Text="Font" VerticalOptions="Center" />
                                <Picker
                                    Title="Select a font"
                                    ItemsSource="{Binding Fonts}"
                                    SelectedItem="{Binding FontSelected}" />
                            </HorizontalStackLayout>
                            <!--  Line style  -->
                            <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                                <Label Text="Line Style" VerticalOptions="Center" />
                                <Picker
                                    Title="Select a line style"
                                    ItemsSource="{Binding LineStyles}"
                                    SelectedItem="{Binding SelectedLineStyle}" />
                            </HorizontalStackLayout>
                            <!--  Year  -->
                            <HorizontalStackLayout Spacing="20" VerticalOptions="Center">
                                <Label Text="Show Year" VerticalOptions="Center" />
                                <Switch IsToggled="{Binding HasYear}" />
                            </HorizontalStackLayout>
                        </VerticalStackLayout>
                    </Border>
                </VerticalStackLayout>
            </toolkit:Expander>

            <!--  Student Details  -->
            <Label
                FontAttributes="Bold"
                FontSize="Large"
                Text="Student Details"
                VerticalOptions="Center" />
            <Border Padding="20">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="20" />
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="20">
                    <CollectionView Margin="5" ItemsSource="{Binding Subjects}">
                        <CollectionView.ItemsLayout>
                            <GridItemsLayout Orientation="Vertical" Span="3" />
                        </CollectionView.ItemsLayout>
                        <CollectionView.EmptyView>
                            <ContentView>
                                <VerticalStackLayout>
                                    <Image
                                        Aspect="AspectFit"
                                        MaximumWidthRequest="300"
                                        Source="no_data.svg" />
                                    <Label Text="No subjects entered yet..." />
                                </VerticalStackLayout>
                            </ContentView>
                        </CollectionView.EmptyView>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Border MaximumWidthRequest="300">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="10" />
                                    </Border.StrokeShape>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=DeleteSubjectCommand}" CommandParameter="{Binding .}" />
                                    </Border.GestureRecognizers>
                                    <Label Margin="5" Text="{Binding .}" />
                                </Border>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                    <Entry
                        HorizontalOptions="Center"
                        Keyboard="Text"
                        Placeholder="Enter name"
                        ReturnCommand="{Binding Source={RelativeSource AncestorType={x:Type vm:MainPageViewModel}}, Path=AddSubjectCommand}"
                        ReturnCommandParameter="{Binding .}"
                        Text="{Binding Name}"
                        WidthRequest="200" />
                    <Entry
                        HorizontalOptions="Center"
                        Keyboard="Text"
                        Placeholder="Enter class"
                        Text="{Binding ClassTitle}"
                        WidthRequest="200" />

                    <HorizontalStackLayout>
                        <Entry
                            HorizontalOptions="Center"
                            Keyboard="Text"
                            Placeholder="Enter subject"
                            ReturnCommand="{Binding AddSubjectCommand}"
                            Text="{Binding Subject}"
                            WidthRequest="300" />
                        <Button Command="{Binding AddSubjectCommand}" Text="Add" />
                    </HorizontalStackLayout>

                    <HorizontalStackLayout HorizontalOptions="Center" Spacing="5">
                        <Button
                            Command="{Binding ClearCommand}"
                            HorizontalOptions="Center"
                            Text="Clear" />
                        <Button
                            Command="{Binding SaveDocumentClickedCommand}"
                            HorizontalOptions="Center"
                            SemanticProperties.Hint="Counts the number of times you click"
                            Text="Save Word Document" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Border>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
